                        <asp:BoundField DataField="status" HeaderText="设备状态" ><ItemStyle Width="20%" /></asp:BoundField>
                        
                 </Columns>
                    </asp:GridView>
                </td>
            </tr>
        </table>
    
    </div>
    </form>
